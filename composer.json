{
    "name": "samuelmwangiw/laravel-vite",
    "description": "A tiny package that adds @vite_assets blade directive and loads Vite assets",
    "authors": [
        {
            "role": "Developer",
            "name": "Samuel Mwangi",
            "email": "samuel@samuelmwangi.co.ke",
            "homepage": "https://github.com/SamuelMwangiW/"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8|^9"
    },
    "autoload": {
        "psr-4": {
            "Samuelmwangiw\\LaravelVite\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Samuelmwangiw\\LaravelVite\\ViteServiceProvider"
            ],
            "aliases": {
                "ViteFacade": "Samuelmwangiw\\LaravelVite\\ViteFacade"
            }
        }
    },
    "require-dev": {
        "pestphp/pest": "^1.9"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
